<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.landmark.dianping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <!-- 获取网络状态的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard读写数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.landmark.dianping.application.MyApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.landmark.dianping.ui.activity.more.MoreActivity" />
        <activity android:name="com.landmark.dianping.ui.activity.search.SearchActivity" />
        <activity android:name="com.landmark.dianping.ui.activity.sign.SignActivity" />
        <activity android:name="com.landmark.dianping.ui.activity.own.MineActivity" />
        <activity android:name="com.landmark.dianping.ui.activity.tarder.TarderActivity" />
    </application>

</manifest>